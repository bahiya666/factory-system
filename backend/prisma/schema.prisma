datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       Role
  department Department?
}

enum Role {
  ADMIN
  DEPARTMENT
}

enum Department {
  WOOD
  FOAM
  MATERIALS
  UPHOLSTERY
  PACKAGING
  DELIVERY
  INVENTORY
}

model Product {
  id      Int              @id @default(autoincrement())
  name    String           @unique
  sizes   Size[]
  fabrics ProductFabric[]
  orderItems OrderItem[]
}

model Size {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
  orderItems OrderItem[]
}

model Fabric {
  id       Int              @id @default(autoincrement())
  name     String           @unique
  colors   Color[]
  products ProductFabric[]
  orderItems OrderItem[]
}

model Color {
  id       Int    @id @default(autoincrement())
  name     String
  fabric   Fabric @relation(fields: [fabricId], references: [id])
  fabricId Int
  orderItems OrderItem[]
}

model ProductFabric {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  fabric    Fabric  @relation(fields: [fabricId], references: [id])
  fabricId  Int

  @@unique([productId, fabricId])
}

model Order {
  id        Int         @id @default(autoincrement())
  dueDate   DateTime
  createdAt DateTime    @default(now())
  items     OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  size      Size?   @relation(fields: [sizeId], references: [id])
  sizeId    Int?
  fabric    Fabric? @relation(fields: [fabricId], references: [id])
  fabricId  Int?
  color     Color?  @relation(fields: [colorId], references: [id])
  colorId   Int?
  quantity  Int
}
