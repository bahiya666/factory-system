datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       Role
  department Department?
}

enum Role {
  ADMIN
  DEPARTMENT
}

enum Department {
  WOOD
  FOAM
  MATERIALS
  UPHOLSTERY
  PACKAGING
  DELIVERY
  INVENTORY
}

model Product {
  id      Int              @id @default(autoincrement())
  name    String           @unique
  sizes   Size[]
  fabrics ProductFabric[]
  orderItems OrderItem[]
}

model Size {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
  orderItems OrderItem[]
}

model Fabric {
  id       Int              @id @default(autoincrement())
  name     String           @unique
  colors   Color[]
  products ProductFabric[]
  orderItems OrderItem[]
}

model Color {
  id       Int    @id @default(autoincrement())
  name     String
  fabric   Fabric @relation(fields: [fabricId], references: [id])
  fabricId Int
  orderItems OrderItem[]
  pieces   CuttingPiece[]
}

model ProductFabric {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  fabric    Fabric  @relation(fields: [fabricId], references: [id])
  fabricId  Int

  @@unique([productId, fabricId])
}

model Order {
  id           Int           @id @default(autoincrement())
  dueDate      DateTime
  createdAt    DateTime      @default(now())
  items        OrderItem[]
  cuttingSlips CuttingSlip[]
}

model OrderItem {
  id         Int          @id @default(autoincrement())
  order      Order        @relation(fields: [orderId], references: [id])
  orderId    Int
  product    Product?     @relation(fields: [productId], references: [id])
  productId  Int?
  size       Size?        @relation(fields: [sizeId], references: [id])
  sizeId     Int?
  fabric     Fabric?      @relation(fields: [fabricId], references: [id])
  fabricId   Int?
  color      Color?       @relation(fields: [colorId], references: [id])
  colorId    Int?
  quantity   Int
  pieces     CuttingPiece[]

  // Canonical keys for cutting rule matching
  productKind ProductKind
  sizeKey     SizeKey
}

/// Catalog of cutting rules (BOM definitions) for all departments and products
enum ProductKind {
  BELLA
  PANEL
  WINGBACK
}

enum SizeKey {
  SINGLE
  THREE_QUARTER
  DOUBLE
  QUEEN
  ANY
}

model CuttingRule {
  id           Int         @id @default(autoincrement())
  department   Department
  productKind  ProductKind
  sizeKey      SizeKey
  material     String
  width        Int
  height       Int
  quantityPer  Int
  note         String?
}

/// Stored cutting slip per order and department
model CuttingSlip {
  id          Int           @id @default(autoincrement())
  order       Order         @relation(fields: [orderId], references: [id])
  orderId     Int
  department  Department
  createdAt   DateTime      @default(now())
  updatedAt   DateTime?     @updatedAt
  pieces      CuttingPiece[]

  @@unique([orderId, department])
}

model CuttingPiece {
  id         Int          @id @default(autoincrement())
  slip       CuttingSlip  @relation(fields: [slipId], references: [id])
  slipId     Int
  material   String
  width      Int
  height     Int
  quantity   Int
  note       String?
  colorId    Int?
  color      Color?       @relation(fields: [colorId], references: [id])
  orderItem  OrderItem?   @relation(fields: [orderItemId], references: [id])
  orderItemId Int?
}

// Supplier Management Models
model Supplier {
  id          Int        @id @default(autoincrement())
  name        String
  contactName String?
  phone       String?
  email       String?
  address     String?
  notes       String?
  products    SupplierProduct[]
  purchases   Purchase[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model SupplierProduct {
  id                 Int        @id @default(autoincrement())
  name               String
  description        String?
  unitCost           Float
  supplier           Supplier   @relation(fields: [supplierId], references: [id])
  supplierId         Int
  purchases          Purchase[]
  inventory          Inventory?
  lowStockThreshold  Int?       // optional for alerts
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  @@unique([supplierId, name])
}

model Purchase {
  id          Int        @id @default(autoincrement())
  product     SupplierProduct @relation(fields: [productId], references: [id])
  productId   Int
  supplier    Supplier   @relation(fields: [supplierId], references: [id])
  supplierId  Int
  quantity    Int
  unitPrice   Float
  totalPrice  Float
  dateBought  DateTime
  lastsUntil  DateTime?
  payments    Payment[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Payment {
  id          Int        @id @default(autoincrement())
  purchase    Purchase   @relation(fields: [purchaseId], references: [id])
  purchaseId  Int
  amountPaid  Float
  paymentDate DateTime   @default(now())
  notes       String?
  createdAt   DateTime   @default(now())
}

model Inventory {
  id          Int       @id @default(autoincrement())
  product     SupplierProduct @relation(fields: [productId], references: [id])
  productId   Int       @unique
  quantity    Int       @default(0)
  lastUpdated DateTime  @updatedAt
  createdAt   DateTime  @default(now())
}
