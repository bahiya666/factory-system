datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       Role
  department Department?
}

enum Role {
  ADMIN
  DEPARTMENT
}

enum Department {
  WOOD
  FOAM
  MATERIALS
  UPHOLSTERY
  PACKAGING
  DELIVERY
  INVENTORY
}
